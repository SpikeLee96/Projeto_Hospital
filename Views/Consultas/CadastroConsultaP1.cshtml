@model Projeto_CRUD.Models.ViewBagModel
@{
    ViewData["Title"] = "Home Page";
}

<br />
<br />
<br />
<br />
<br />
<br />

<section>

    <h1>Marcação de consulta</h1>

    <br />
    <br />

    @using (Html.BeginForm("CadastroConsultaP1", "Consultas", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <table>
            <thead>
                <tr>
                    <td> @Html.Label("", "Localize-se por nome ou CPF", new { @class = "form-label", @style = "font-weight: bold" }) </td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.EditorFor(model => model.msg, new { htmlAttributes = new { @style = "width:270px" } })
                        @Html.ValidationMessageFor(model => model.msg, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td> <br /> @Html.Label("", "Selecione o tipo do exame", new { @class = "form-label", @style = "font-weight: bold" }) </td>
                </tr>
                <tr>
                    <td>
                        @{
                            List<SelectListItem>
                                listTipos = new List<SelectListItem>
                                    ();
                            foreach (var t in ViewBag.listaTipoExames)
                            {
                                listTipos.Add(new SelectListItem
                                {
                                    Text = t.tipo,
                                    Value = t.id.ToString()
                                });
                            }

                            @Html.DropDownListFor(model => model.msg2, listTipos)

                        }
                    </td>
                </tr>
                <tr>
                    <td> <br /> <button type="submit" class="btn btn-success btn-lg mb-1">Enviar</button> </td>
                </tr>
            </tbody>
        </table>
    }

</section>